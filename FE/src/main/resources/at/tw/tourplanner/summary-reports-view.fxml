<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<!-- Summary Report Window -->
<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="at.tw.tourplanner.ReportController" style="-fx-padding: 15;">
<VBox alignment="CENTER" spacing="10" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10">
    <Label text="Summary Report" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <TableView fx:id="summaryReportTable">
        <columns>
            <TableColumn text="Tour Name"/>
            <TableColumn text="Avg Distance"/>
            <TableColumn text="Avg Time"/>
            <TableColumn text="Avg Rating"/>
        </columns>
    </TableView>

    <Button text="Close" onAction="#closeSummary"/>
</VBox>
</AnchorPane>
