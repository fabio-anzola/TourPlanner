<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<!-- Tour Report Window -->
<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="at.tw.tourplanner.ReportController" style="-fx-padding: 15;">
    <VBox alignment="CENTER" spacing="10" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10">
        <Label text="Tour Report" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

        <TableView fx:id="tourReportTable">
            <columns>
                <TableColumn text="Tour Name"/>
                <TableColumn text="Description"/>
                <TableColumn text="From"/>
                <TableColumn text="To"/>
                <TableColumn text="Distance"/>
                <TableColumn text="Estimated Time"/>
            </columns>
        </TableView>

        <Button text="Close" onAction="#closeReport"/>
    </VBox>
</AnchorPane>